{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES6", 
    "module": "CommonJS", 
    "declaration": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "noImplicitAny": true, 
    "strictNullChecks": true, 
    "strictFunctionTypes": true, 
    "noImplicitThis": true, 
    "useUnknownInCatchVariables": true, 
    "alwaysStrict": true, 
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
